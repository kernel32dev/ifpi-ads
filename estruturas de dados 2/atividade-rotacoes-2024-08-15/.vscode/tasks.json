{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Makefile",
            "type": "shell",
            "command": "make debug",
            "args": [],
            "problemMatcher": {
                "owner": "c",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                  "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                  "file": 1,
                  "line": 2,
                  "column": 3,
                  "severity": 4,
                  "message": 5
                }
              },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}